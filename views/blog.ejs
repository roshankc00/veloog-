<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %>
    <title>home page </title>
</head>
<body>
    <%- include('./partials/navbar')  %>
    <div class="container">
        <h1> <%= blog.title  %></h1>
        <img src="<%= blog.coverImageURl %>" width="500px" >
        <p> <%= blog.body  %></p>

    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl  %>" width="50px" style='border-radius: 50%;'  /> <%= blog.createdBy.fullName %>
    </div>
 <div class="container">
    <h1> Comments (<%= comments.length %>)</h1>
    <%if (locals.user) { %>

        <form  action="/blog/comment/<%= blog._id %>" method="post">

        
            <div class="mb-3 d-flex">
             
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1",
                name="content"
                aria-describedby="emailHelp"
                placeholder="Enter the commment"
              />
              <button type="submit" class="btn btn-primary m-2">submit </button>
            </div>
    </form>
        
  <%  } %>
   
 </div>
    
<div> </div>

<div class="container">
  
    <% comments.forEach(comment=>{ %>
        <div>
            <img src="<%= comment.createdBy.profileImageUrl  %>" width="50px" style='border-radius: 50%;'  />
             <%= comment.createdBy.fullName %>: 
             <span class="pl-5 text-primary "> <%=comment.content %></span>
             </div>
    <%})%>
</div>
    <%- include('./partials/scripts')  %>
</body>
</html>